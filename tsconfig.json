{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": false,
    "lib": [
      "es2015",
      "scripthost",
      "es2015.promise",
      "es2015.generator",
      "es2015.iterable",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "outDir": "build",
    "strict": false,
    "target": "es5",
    "declaration": true,
    "declarationDir": "build/types",
    "resolveJsonModule": true,
  },
  "include": ["src/**/*", "src/cli.ts", "src/cli.ts"],
  "exclude": ["node_modules", "src/timbo.config.ts", "src/types.ts"]
}
